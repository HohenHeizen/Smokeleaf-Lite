<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--Chemfuel Recipe-->
	<RecipeDef>
		<defName>Make_ChemfuelFromSmokeleaf</defName>
		<label>make chemfuel from smokeleaf</label>
		<description>Make a batch of chemfuel by extracting and condensing oils from smokeleaf.</description>
		<jobString>Refining chemfuel from wood.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>1969</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>70</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SmokeleafLeaves</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>42</Chemfuel>
		</products>
       <researchPrerequisite>SmokeleafRefining</researchPrerequisite>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	</RecipeDef>
